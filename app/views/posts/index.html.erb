<h1>Posts</h1>
<div id="posts" class="row row-cols-1 row-cols-sm-2 row-cols-lg-4">
  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
</div>
<div class="container text-end">
  <div class="row text-end">
    <div class="col text-end">
    </div>
    <div class="col text-end">
      <%if @pagy.pages >= 1 %>
        <%== pagy_bootstrap_nav(@pagy) %>
      <%end%>
    </div>
  </div>
</div>
