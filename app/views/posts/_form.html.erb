<%= form_with(model: post,class: "container") do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col">
    <%= form.label :title, style: "display: block", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="col">
    <%= form.label :body, style: "display: block", class: "form-label" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="col">
    <%= form.label :image, style: "display: block", class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="col mb-3">
    
    <%= form.number_field :user_id, value: current_user.id, type: :hidden  %>
  </div>

  <div class="col text-end mb-3">
    <%= form.submit %>
  </div>
<% end %>
