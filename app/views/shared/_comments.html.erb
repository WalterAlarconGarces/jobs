<h2 class="mx-3 mb-3">Comments:</h2>
<% comments.each do |comment| %>
  



<div class="card mx-3 mb-3">
  <div class="card-header">
    Comment ID: <%= comment.id %>
  </div>
  <div class="card-body">
    <% if true %>
    <h5 class="card-title"><%=image_tag User.find(comment.user_id).avatar , id: "mini_avatar"%> <%=User.find(comment.user_id).name%>, user ID: <%=comment.user_id%>, says: </h5>
    <% else %>
    <h5 class="card-title"> User ID <%=comment.user_id%>, says: </h5>
    <% end%>
    <p class="card-text mx-4"><%= comment.body %></p>
    
  </div>
</div>

<% end %>